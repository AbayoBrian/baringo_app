{
    "name": "ims-baringo/cidu",
    "description": "IMS Baringo CIDU - Irrigation Management System",
    "type": "project",
    "version": "2.0.0",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "IMS\\": "classes/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir -p assets/uploads/documents",
            "mkdir -p assets/uploads/photos",
            "mkdir -p assets/uploads/attendance",
            "chmod 755 assets/uploads"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
